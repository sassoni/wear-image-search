<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_gray"
    tools:context=".MyActivity">

    <android.support.wearable.view.CircledImageView
        android:id="@+id/main_tap_to_search_btn"
        style="@style/circle_button_layout"
        app:circle_color="@color/material_red"
        app:circle_radius="50dp"
        app:circle_radius_pressed="55dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/tap_to_search"
        android:src="@drawable/icon_search_2" />

    <TextView
        android:id="@+id/main_tap_to_search_label"
        style="@style/circle_button_text"
        android:layout_below="@id/main_tap_to_search_btn"
        android:text="@string/tap_to_search" />

    <android.support.wearable.view.GridViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_grid_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:visibility="gone" />
</RelativeLayout>


