<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.wearable.view.CircledImageView
        android:id="@+id/pager_load_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_refresh"
        app:circle_color="@color/blue"
        app:circle_radius="50dp"
        app:circle_radius_pressed="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pager_load_more_btn"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Load more results"
        android:textColor="@color/common_signin_btn_light_text_default" />

</RelativeLayout>